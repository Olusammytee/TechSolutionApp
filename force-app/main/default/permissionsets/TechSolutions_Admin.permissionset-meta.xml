<?xml version="1.0" encoding="UTF-8"?>
<PermissionSet xmlns="http://soap.sforce.com/2006/04/metadata">
  <label>TechSolutions Admin</label>
  <hasActivationRequired>false</hasActivationRequired>

  <!-- Application Visibility - CRITICAL FOR APP LAUNCHER -->
  <applicationVisibilities>
    <application>Tech_Solutions</application>
    <visible>true</visible>
  </applicationVisibilities>

  <!-- Tab Settings - CRITICAL FOR TAB ACCESS -->
  <tabSettings>
    <tab>Device__c</tab>
    <visibility>Visible</visibility>
  </tabSettings>
  <tabSettings>
    <tab>Device_Order__c</tab>
    <visibility>Visible</visibility>
  </tabSettings>
  <tabSettings>
    <tab>Customer__c</tab>
    <visibility>Visible</visibility>
  </tabSettings>
  <tabSettings>
    <tab>Supplier__c</tab>
    <visibility>Visible</visibility>
  </tabSettings>

  <!-- Object Permissions -->
  <objectPermissions>
    <object>Device__c</object>
    <allowCreate>true</allowCreate>
    <allowDelete>true</allowDelete>
    <allowEdit>true</allowEdit>
    <allowRead>true</allowRead>
    <modifyAllRecords>true</modifyAllRecords>
    <viewAllRecords>true</viewAllRecords>
  </objectPermissions>
  <objectPermissions>
    <object>Device_Order__c</object>
    <allowCreate>true</allowCreate>
    <allowDelete>true</allowDelete>
    <allowEdit>true</allowEdit>
    <allowRead>true</allowRead>
    <modifyAllRecords>true</modifyAllRecords>
    <viewAllRecords>true</viewAllRecords>
  </objectPermissions>
  <objectPermissions>
    <object>Customer__c</object>
    <allowCreate>true</allowCreate>
    <allowDelete>true</allowDelete>
    <allowEdit>true</allowEdit>
    <allowRead>true</allowRead>
    <modifyAllRecords>true</modifyAllRecords>
    <viewAllRecords>true</viewAllRecords>
  </objectPermissions>
  <objectPermissions>
    <object>Supplier__c</object>
    <allowCreate>true</allowCreate>
    <allowDelete>true</allowDelete>
    <allowEdit>true</allowEdit>
    <allowRead>true</allowRead>
    <modifyAllRecords>true</modifyAllRecords>
    <viewAllRecords>true</viewAllRecords>
  </objectPermissions>

  <!-- Field Permissions for Device__c Custom Fields -->
  <fieldPermissions>
    <field>Device__c.Minimum_Stock_Level__c</field>
    <editable>true</editable>
    <readable>true</readable>
  </fieldPermissions>
  <fieldPermissions>
    <field>Device__c.Reorder_Point__c</field>
    <editable>true</editable>
    <readable>true</readable>
  </fieldPermissions>
  <fieldPermissions>
    <field>Device__c.Last_Restocked__c</field>
    <editable>true</editable>
    <readable>true</readable>
  </fieldPermissions>
  <fieldPermissions>
    <field>Device__c.Stock_Status__c</field>
    <editable>true</editable>
    <readable>true</readable>
  </fieldPermissions>

  <!-- Field Permissions for Device_Order__c Custom Fields -->
  <fieldPermissions>
    <field>Device_Order__c.Total_Price__c</field>
    <editable>true</editable>
    <readable>true</readable>
  </fieldPermissions>
  <fieldPermissions>
    <field>Device_Order__c.Order_Date__c</field>
    <editable>true</editable>
    <readable>true</readable>
  </fieldPermissions>
  <fieldPermissions>
    <field>Device_Order__c.Confirmation_Number__c</field>
    <editable>true</editable>
    <readable>true</readable>
  </fieldPermissions>

  <!-- Apex Class Permissions -->
  <classAccesses>
    <apexClass>OrderDashboardMinimal</apexClass>
    <enabled>true</enabled>
  </classAccesses>
  <classAccesses>
    <apexClass>OrderTriggerHandler</apexClass>
    <enabled>true</enabled>
  </classAccesses>

</PermissionSet>
