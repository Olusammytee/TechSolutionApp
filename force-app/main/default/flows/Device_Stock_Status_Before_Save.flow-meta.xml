<?xml version="1.0" encoding="UTF-8"?>
<Flow xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>61.0</apiVersion>
    <description>Before-save Record-Triggered Flow to automatically maintain Stock_Status__c based on quantity levels and thresholds for optimal performance</description>
    <environments>Default</environments>
    <formulas>
        <name>CalculatedStockStatus</name>
        <dataType>String</dataType>
        <expression>IF({!$Record.Stock_Quantity__c} &lt;= 0, "Out of Stock",
IF({!$Record.Stock_Quantity__c} &lt;= {!$Record.Minimum_Stock_Level__c}, "Low Stock",
IF({!$Record.Stock_Quantity__c} &lt;= {!$Record.Reorder_Point__c}, "Reorder Soon", "In Stock")))</expression>
    </formulas>
    <interviewLabel>Device Stock Status Before Save {!$Flow.CurrentDateTime}</interviewLabel>
    <label>Device Stock Status Before Save</label>
    <processMetadataValues>
        <name>BuilderType</name>
        <value>
            <stringValue>LightningFlowBuilder</stringValue>
        </value>
    </processMetadataValues>
    <processMetadataValues>
        <name>CanvasMode</name>
        <value>
            <stringValue>AUTO_LAYOUT_CANVAS</stringValue>
        </value>
    </processMetadataValues>
    <processMetadataValues>
        <name>OriginBuilderType</name>
        <value>
            <stringValue>LightningFlowBuilder</stringValue>
        </value>
    </processMetadataValues>
    <processType>AutoLaunchedFlow</processType>
    <recordUpdates>
        <name>Update_Stock_Status</name>
        <label>Update Stock Status</label>
        <locationX>176</locationX>
        <locationY>323</locationY>
        <inputAssignments>
            <field>Stock_Status__c</field>
            <value>
                <elementReference>CalculatedStockStatus</elementReference>
            </value>
        </inputAssignments>
        <inputReference>$Record</inputReference>
    </recordUpdates>
    <start>
        <locationX>50</locationX>
        <locationY>0</locationY>
        <connector>
            <targetReference>Update_Stock_Status</targetReference>
        </connector>
        <object>Device__c</object>
        <recordTriggerType>CreateAndUpdate</recordTriggerType>
        <triggerType>RecordBeforeSave</triggerType>
    </start>
    <status>Active</status>
</Flow>
