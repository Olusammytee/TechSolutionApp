<?xml version="1.0" encoding="UTF-8"?>
<CustomField xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Line_Total__c</fullName>
    <externalId>false</externalId>
    <description>Total amount for this line item after applying line-level discounts</description>
    <formula>IF(AND(NOT(ISBLANK(Unit_Price__c)), NOT(ISBLANK(Quantity__c))),
    (Unit_Price__c * Quantity__c) - BLANKVALUE(Line_Discount_Amount__c, 0),
    0)</formula>
    <formulaTreatBlanksAs>BlankAsZero</formulaTreatBlanksAs>
    <inlineHelpText>Automatically calculated as (Unit Price Ã— Quantity) - Line Discount Amount.</inlineHelpText>
    <label>Line Total</label>
    <precision>18</precision>
    <required>false</required>
    <scale>2</scale>
    <trackHistory>false</trackHistory>
    <trackTrending>false</trackTrending>
    <type>Currency</type>
</CustomField>
