<?xml version="1.0" encoding="UTF-8"?>
<CustomField xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Tax_Amount__c</fullName>
    <description>Calculated tax amount based on subtotal and tax rate</description>
    <externalId>false</externalId>
    <formula>IF(AND(NOT(ISBLANK(Subtotal__c)), NOT(ISBLANK(Tax_Rate__c))), 
    Subtotal__c * Tax_Rate__c, 
    0)</formula>
    <formulaTreatBlanksAs>BlankAsZero</formulaTreatBlanksAs>
    <inlineHelpText>Automatically calculated as Subtotal Ã— Tax Rate.</inlineHelpText>
    <label>Tax Amount</label>
    <precision>18</precision>
    <required>false</required>
    <scale>2</scale>
    <trackHistory>false</trackHistory>
    <trackTrending>false</trackTrending>
    <type>Currency</type>
</CustomField>
