<?xml version="1.0" encoding="UTF-8"?>
<CustomField xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Total_Amount__c</fullName>
    <description>Final total amount for the order including tax and shipping, minus discounts</description>
    <externalId>false</externalId>
    <formula>BLANKVALUE(Subtotal__c, 0) + 
BLANKVALUE(Tax_Amount__c, 0) + 
BLANKVALUE(Shipping_Cost__c, 0) - 
BLANKVALUE(Order_Discount_Amount__c, 0)</formula>
    <formulaTreatBlanksAs>BlankAsZero</formulaTreatBlanksAs>
    <inlineHelpText>Final order total: Subtotal + Tax + Shipping - Order Discount.</inlineHelpText>
    <label>Total Amount</label>
    <precision>18</precision>
    <required>false</required>
    <scale>2</scale>
    <trackHistory>false</trackHistory>
    <trackTrending>false</trackTrending>
    <type>Currency</type>
</CustomField>
