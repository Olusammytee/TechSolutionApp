<?xml version="1.0" encoding="UTF-8"?>
<CustomField xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Average_Order_Value__c</fullName>
    <description>Average order value calculated from total order value and order count</description>
    <externalId>false</externalId>
    <formula>IF(Order_Count__c > 0, Total_Order_Value__c / Order_Count__c, 0)</formula>
    <formulaTreatBlanksAs>BlankAsZero</formulaTreatBlanksAs>
    <inlineHelpText>Automatically calculated average value per order for this customer.</inlineHelpText>
    <label>Average Order Value</label>
    <precision>18</precision>
    <required>false</required>
    <scale>2</scale>
    <trackHistory>false</trackHistory>
    <trackTrending>false</trackTrending>
    <type>Currency</type>
</CustomField>
